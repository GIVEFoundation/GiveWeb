<html>
<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<head>
    <link href="~/Content/style.css" rel="stylesheet">
    <style type="text/css">

body{
	padding:0;
	margin:0;
	background-image: url(Content/assets/static/images/background.png);
	background-size: contain;
	background-position: center;
}

.infobox
    {
		width: 100%;
		height: 100%;
		background-image: url(Content/assets/static/images/splash.png);
		background-size: contain;
		background-position: center;
		background-repeat: no-repeat !important;
		margin: 0;
		padding: 0;
		max-width: 600px;
		margin: .5% auto;
		max-height: 98%;
    }





.start{
	position: relative;
	top: 59%;

}

.start a{
	text-decoration:none;
	color:#000;
	font-weight: 300;
	opacity: .5;
	font-size: 23px;
}

.start a:hover{
	color:#000;
	opacity: .7;
}
}
/* start of desktop styles */

@@media screen and (max-width: 991px) {
     /* start of large tablet styles */

}

@@media screen and (max-width: 767px) {
     /* start of medium tablet styles */

}

@@media screen and (max-width: 479px) {
     /* start of phone styles */
	.infobox
    {

		background-size: 100% auto;

		max-width: 100%;
		margin: 0 auto;
		max-height: 100%;
    }

}

    </style>
</head>
<body class="app">
    <div id="loader">
        <div class="spinner"></div>
    </div>
    <script type="text/javascript">
window.addEventListener('load', () => {
        const loader = document.getElementById('loader');
        setTimeout(() => {
          loader.classList.add('fadeOut');
        }, 200);
      });
    </script>
    <div align="center" class="infobox"><h1 class="start"><a href="@Url.Action("Login", "Account")">Start</a></h1></div>
    <script type="text/javascript" src="vendor.js">
    </script>
    <script type="text/javascript" src="bundle.js"></script>
</body>
</html>